# Amadeus Flight Search Environment Variables
# Copy this file to .env and fill in your actual values

# Amadeus API Configuration
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
AMADEUS_ENVIRONMENT=test

# WordPress Configuration
WP_DB_HOST=localhost
WP_DB_NAME=amadeus_flight_search
WP_DB_USER=root
WP_DB_PASSWORD=password
WP_DB_CHARSET=utf8mb4
WP_DB_COLLATE=utf8mb4_unicode_ci

# WordPress URLs
WP_HOME=http://localhost:8000
WP_SITEURL=http://localhost:8000

# Plugin Settings
CURRENCY_CODE=USD
DEBUG_MODE=true
ENABLE_HOTEL_SEARCH=false

# Development Server
DEV_PORT=8000
DEV_HOST=localhost

# Logging
LOG_LEVEL=debug
LOG_FILE=src/backend/backend.log